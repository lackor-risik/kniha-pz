# Database
DATABASE_URL=postgresql://kniha_pz:kniha_pz_secret@localhost:5432/kniha_pz

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Web Push (VAPID) - generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# Storage (filesystem or minio)
STORAGE_TYPE=filesystem
UPLOADS_PATH=./data/uploads

# MinIO (optional - if STORAGE_TYPE=minio)
# MINIO_ENDPOINT=localhost
# MINIO_PORT=9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=catch-photos
# MINIO_USE_SSL=false

# App Settings
HARVEST_PLAN_STRICT=false

# Cron Job Secret (for auto-closing visits at midnight)
CRON_SECRET=your-cron-secret-key
